package view

templ Modal(id string) {
	<div
 		class="modal fade"
 		id={ id }
 		data-bs-backdrop="static"
 		data-bs-keyboard="false"
 		tabindex="-1"
 		aria-labelledby="staticBackdropLabel"
 		aria-hidden="true"
	>
		<div class="modal-dialog">
			<div class="modal-content" id={ id+"_content" }>
				{ children... }
			</div>
		</div>
	</div>
}

package view

templ ModalUser(v *View, m Map) {
	<div class="modal-header">
		<h1 class="modal-title fs-5" id="staticBackdropLabel">
			if v.IsURL("user_create") {
				🙍‍♂️ Create user
			} else {
				📝 Edit { m.getUser().Email }
			}
		</h1>
		<button
 			type="button"
 			class="btn-close"
 			data-bs-dismiss="modal"
 			aria-label="Close"
 			hx-get={ v.URL("user_list") }
 			hx-swap="innerHTML"
 			hx-target="#users"
		></button>
	</div>
}

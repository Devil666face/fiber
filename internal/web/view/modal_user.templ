package view

import (
	"github.com/Devil666face/fiber/internal/models"
)

templ ModalUser(v *View, m Map) {
	<div class="modal-header">
		<h1 class="modal-title fs-5" id="staticBackdropLabel">
			if user,ok:=m["User"].(models.User);ok {
				📝 Edit { user.Email }
			} else {
				🙍‍♂️ Create user
			}
		</h1>
		<button
 			type="button"
 			class="btn-close"
 			data-bs-dismiss="modal"
 			aria-label="Close"
 			hx-get={ v.URL("user_list") }
 			hx-swap="innerHTML"
 			hx-target="#users"
		></button>
	</div>
}
